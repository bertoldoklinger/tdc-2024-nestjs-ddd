{
  "name": "ecommerce-service",
  "version": "0.0.1",
  "description": "Serviço responsável pelo controle do processo dos serviços disponíveis",
  "author": "Michel Augusto Pasta",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "pre:dev": "NODE_ENV=development npm run fixtures",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:report": "eslint \"{src,apps,libs,test}/**/*.ts\" --output-file report/eslint-report.json --format json",
    "pre:test": "NODE_ENV=test npm run typeorm:ds schema:drop && NODE_ENV=test npm run typeorm:ds migration:run && NODE_ENV=test npm run fixtures",
    "test": "npm run pre:test && NODE_ENV=test jest --config ./test/jest.json",
    "test:watch": "npm run test -- --watch",
    "test:cov": "npm run test -- --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ./test/jest.json --runInBand",
    "typeorm": "node -r dotenv/config -r ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:ds": "node -r dotenv/config -r ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./test/utils/database/datasource.ts",
    "fixtures": "fixtures-ts-node-commonjs --require=tsconfig-paths/register -d ./test/utils/database/datasource.ts load test/utils/fixtures/",
    "dependency-graph": "npx depcruise src --include-only '^src' --config --output-type dot | dot -T svg > report/dependency-graph.svg"
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.410.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.2",
    "@nestjs/passport": "^10.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.10",
    "@nestjs/terminus": "^10.0.1",
    "@nestjs/typeorm": "^10.0.0",
    "@types/js-yaml": "^4.0.5",
    "buscadorcep": "^2.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "jest-html-reporter": "^3.10.2",
    "joi": "^17.10.1",
    "js-yaml": "^4.1.0",
    "passport": "^0.6.0",
    "passport-headerapikey": "^1.2.2",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sqs-consumer": "^7.3.0",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "typeorm-transactional": "^0.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dependency-cruiser": "^13.1.5",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "expect-more-jest": "^5.5.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "nock": "^13.3.3",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm-fixtures-cli": "^3.1.0",
    "typescript": "^5.1.3",
    "uuid": "^9.0.1"
  }
}
